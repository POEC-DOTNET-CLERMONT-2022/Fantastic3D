<Window x:Class="ExternalDataReader.WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExternalDataReader.WPFApp"
        mc:Ignorable="d"
        Title="External Data Reader for Fantastic 3D" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock FontSize="20" Height="60" TextAlignment="Center">External Data Reader</TextBlock>
        <TextBlock>Ce logiciel est destiné à aller piocher des infos sur le service WCF de Fantastic3D.
            Entrez un nom de modèle 3D pour obtenir ses informations.</TextBlock>
            <TextBox x:Name="UserInput" Height="60"></TextBox>
        <DockPanel Height="100">
            <Button x:Name="Search" Width="200" Content="Interroger"  Height="60" Click="SearchButton_Click"/>
            <Button x:Name="List" Width="200" Content="Lister"  Height="60" Click="ListButton_Click"/>
        </DockPanel>
        <TextBlock x:Name="RequestOutput" Height="60">---</TextBlock>
        
    </StackPanel>

</Window>
