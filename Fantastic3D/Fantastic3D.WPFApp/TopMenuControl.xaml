             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fantastic3D.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800" Background="Black">
