<Window x:Class="Fantastic3D.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fantastic3D.GUI"
        mc:Ignorable="d"
        Title="Model Manager GUI" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#FF5C91AD">
            <Button x:Name="MenuHomeButton" Width="100" Height="50" Click="MenuHomeButton_Click">Accueil</Button>
            <Button x:Name="MenuModelButton" Width="100" Height="50" Click="MenuModelButton_Click">Modèles</Button>
            <Button x:Name="MenuUsersButton" Width="100" Height="50">Utilisateurs</Button>
            <Button x:Name="MenuOrdersButton" Width="100" Height="50">Commande</Button>
            <Button x:Name="MenuReviewsButton" Width="100" Height="50">Avis</Button>
        </StackPanel>
        
        <ContentControl x:Name="MainContent" DockPanel.Dock="Bottom"></ContentControl>
    </DockPanel>
</Window>
